---
interface Props {
    tintvalues: string;
    projectId: string;
    coverurl: string;
    titletext: string;
    summarytext: string;
}
const { summarytext, titletext, coverurl, tintvalues, projectId } = Astro.props;
---
<input type="checkbox" id={`toggle-project-${projectId}`} hidden>
<label for={`toggle-project-${projectId}`} class="project" style={`background-image:linear-gradient(rgba${tintvalues}, rgba${tintvalues}),url(${coverurl});`}>
    <div class="project-inner">
        <span class="project-title">{titletext}</span>
        <div class="project-details">
            <span class="project-summary">{summarytext}</span>
        </div>
    </div>
</label>

<style>
.project {
    margin: 1rem;
    user-select: none;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    color: white;
    width: 90vw;
    height: 20rem;
    text-align: center;
    border-radius: 8px;
    cursor: pointer;
    transition: height 0.3s ease, 
                background-color 0.3s ease,
                box-shadow 0.3s ease,
                width 0.3s ease;
}
.project:hover {
    box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.3),
                -10px -10px 10px white;
    height: 21rem;
    width: 91vw;
}
.project-inner {
    display: flex;
    justify-content: center;
    width: 100%;
    position: relative;
}

.project-summary {
    display: flex;
    max-height: 0;
    overflow: hidden;
    opacity: 0;
}

.project-title {
    font-size: 5vw;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    user-select: none;
    font-weight: 500;
    text-align: center;
	color: #333;
	padding: 1rem;
    margin: 0px;
	background: white; 
	border-radius: 1rem;
	box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.3);
    transition: transform 0.3s ease,
                box-shadow 0.3s ease,
                font-size 0.3s ease;
}

.project-details {
    height: 0px;
    opacity: 1;
    overflow: hidden;
    transition: height 0.3s ease;
    background-color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60%;
    color: #333;
}

input[type="checkbox"]:checked + .project {
    background-color: black;
    color: white;
    width: clamp(200px, 90%, 2100px);
    height: 40rem;
    width: 98vw;
    flex-direction: column;
    justify-content: center;
    position: relative;
}

input[type="checkbox"]:checked + .project .project-details {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    width: 60%;
    max-height: 40rem; 
    opacity: 1;
    background-color: white;
    color: #333;
    height: 40rem;
}

input[type="checkbox"]:checked + .project .project-title {
    font-size: 3rem;
    transform: translate(-50%, -18rem);
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0);
}

input[type="checkbox"]:checked + .project .project-summary {
    font-size: 1.2rem;
    max-height: 200px; 
    opacity: 1;
    margin-top: 13rem;
}

</style>