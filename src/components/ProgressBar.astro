---
interface Props {
    Progress: string;
}
const { Progress } = Astro.props;
---
<div class="bar">
    <div class={`segment segment1 ${Progress === 'Just Started' ? 'active' : Progress === 'Working on it' || Progress === 'Complete' ? 'completed' : 'inactive'}`}>Just Started</div>
    <div class={`segment segment2 ${Progress === 'Working on it' ? 'active' : Progress === 'Complete' ? 'completed' : 'inactive'}`}>Working on it</div>
    <div class={`segment segment3 ${Progress === 'Complete' ? 'active' : 'inactive'}`}>Complete</div>
</div>
<style>
.bar {
    display: flex;
    width: 80%;
    height: 7vh;
    border-radius: 5px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border: 0.25rem solid #333;
    margin: 1rem;
    justify-self: center;
}

.segment {
    flex: 1;
    width: 20%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    transition: background-color 0.3s, color 0.3s;
    border: #a0a0a0 0.25rem solid;
    font-size: clamp(0.5rem, 1.5vw, 1.5rem);
}

.segment1.active {
    background-color: #D2222D;
}

.segment1.completed {
    background-color: #333;
    color: darkgrey;
}

.segment2.active {
    background-color: #FFBF00;
    color: black; /* Better contrast on yellow */
}

.segment2.completed {
    background-color: #333;
    color: darkgrey;
}

.segment3.active {
    background-color: #007000;
}

.inactive {
    background-color: lightgrey;
    color: darkgrey;
}
</style>