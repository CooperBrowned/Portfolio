---
interface Props {
    bodytext: string;
}
const { bodytext } = Astro.props;
---
<div class="text-section">
    <div class="text-section-inner">
        <div class="text-section-body">{bodytext}</div>
    </div>
</div>
<style>
.text-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    margin: 1rem;
    background-color: #f5f5f5;
    border-radius: 4px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
}
</style>